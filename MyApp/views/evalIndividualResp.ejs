<html>
    <head>
        <% include partials/head.ejs %>
        <script>
                $(document).ready(function () {
                var total = 0, max_total=0;
                $(".marks").change(function(){

                        if($(".totalMarks").val()< $(this).val()){
                            alert("Obtained marks cannot be greater than Maximum marks");
                            $(this).focus();
                        }else{
                        total += Number($(this).val());
                        }
                        $("#totalMarksObtd").val(total);

                });
                $(".totalMarks").each(function () {
                     max_total += Number($(this).val());
                     $("#totalMarks").val(max_total);
                });

               /* $(".btnTot").on(function () {
                    $(".totalMarks").each(function () {

                        alert($(".totalMarks") );
                        alert($(".marks").val() );


                    });
                });*/



            });
        </script>

        <style>
            body { padding-top: 60px; padding-bottom: 30px; }
        </style>
    </head>
    <body>
        <div class="row">
            <div class="col-sm-1"></div>

                <div class="col-sm-10">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <% var entries = JSON.parse(solvedQuizzes)%>
                            <% entries.forEach((entry)=>{%>
                            <h4>Quiz Response by <%=entry.fullname%></h4>

                        </div>
                        <div class="panel-body">
                            <%entry.quiz_id.questions.forEach((que,index)=>{%>
                            <h5>
                                <label>
                                        <span class="label label-default">Question # <%=index+1%>:
                                        </span>
                                </label>
                                <%= que.que_body%>
                                <div class="col-xs-2 pull-right">
                                    <form method="post" action="/storeScores/quizResp/<%=entry._id%>/quiz_id/<%=entry.quiz_id._id%>/student_id/<%=entry.user_id%>">
                                    <label>Marks Obtained: </label><input type="number" class="marks form-control" name="marks" min = 0 max="calculateMax()">
                                    <label>Out Of: </label><input type="number" class="totalMarks form-control" name="max_marks" value="<%=entry.quiz_id.marks[index].max_marks%>" readonly>

                                </div>

                                <div class="row">
                                    <div class="container-fluid">
                                        <%=entry.answers[index].ans_body%>
                                    </div>
                                </div>
                            </h5>

                            <%})%>
                            <hr>


                            <div class="col-xs-5">
                            <label>Final Score:</label>
                               <!-- <input type="button" id="btnTot" value="Calculate Total">-->
                            <br/><input type="number" placeholder="Marks Obtained" id="totalMarksObtd" readonly>&nbsp;/&nbsp;<input type="number" placeholder="Total" id="totalMarks" readonly>
                            </div>
                            <input type="submit" class="btn btn-success pull-right" id="submitBtn" value="Submit Scores">
                            </form>
                        </div>
                    </div>
                </div>
            <%})%>
            <div class="col-sm-1"></div>
        </div>



    </body>
</html>